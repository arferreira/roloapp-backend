
<br />
<% if @category.errors.any? %>
<% @category.errors.full_messages.each do |message| %>
<script>
  toastr.error('<%= message %>')
</script>
<% end %>
<% end %>

<div class="row">
  <div class="col-md-8">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('category') %></h3>
  </div>
  <div class="panel-body">
    <div class="col-lg-6">
      <%= form_for([:backend, @category]) do |f| %>
      <div class="form-group">
        <%= f.label :"Description" %><br/>
        <%= f.text_field :description, :class => 'form-control', :placeholder => 'Ex.: Animal / Pet' %><br />
        <%= f.label :"Status" %>
        <%= f.check_box :status %><br/><br />
        <%= f.submit t('buttons.save'), :class => 'btn btn-primary' %>
        <%= link_to t('buttons.back'),  backend_categories_path, :class => 'btn btn-warning'  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>
<div class="col-md-4">
  <div class="panel panel-info">
  <div class="panel-heading">Categories</div>
  <div class="panel-body">
    <% if @categories  %>
    <ul class="nav nav-pills nav-stacked nav-pills-stacked-example">
    <% @categories.each do |category| %>
      <% if category.status %>
      <li role="presentation" class="active">
      <%= link_to category.description,  edit_backend_category_path(category.id)  %>
      </li>
      <% else %>
      <li role="presentation">
      <%= link_to category.description,  edit_backend_category_path(category.id)  %>
      </li>
      <% end %>
    <% end %>
    </ul>
    <% end  %>
  </div>
</div>
</div>
</div>
