<br  />
                <% if notice %>
                <script>
                  toastr.info('<%= notice %>')
                </script>
                <% end %>
                <div class="panel panel-primary">
                        <div class="panel-heading">
                            Listando Categorias
                            <%= link_to   new_backend_category_path  , :class => 'btn btn-success pull-right', :style => "margin-top:-6px;" do %>
                            <i class="fa fa-plus"></i>
                            <% end %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Descrição</th>
                                            <th>Situação</th>
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @categories.each do |category| %>
                                        <tr>
                                            <td><%= category.id %></td>
                                            <td><%= category.description %></td>
                                            <% if category.status %>
                                            <td><p class="text-success"><%= "Ativada" %></p></td>
                                            <% else %>
                                            <td><p class="text-danger"><%= "Inativada" %></p></td>
                                            <% end %>
                                            <td>
                                            <%= link_to  edit_backend_category_path(category.id), class: "btn btn-warning btn-circle" do %>
                                            <i class="fa fa-check"></i>
                                            <% end %> | <button disabled type="button" class="btn btn-danger btn-circle"><i class="fa fa-times"></i>
                                              </button>
                                        </td>
                                        </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                                <center><%= paginate @categories, theme: 'twitter-bootstrap-4',
                   pagination_class: "pagination-sm" %></center>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
